<% include page-head.ejs %>
<body>
    <% include nav %>
    <main>
        <h1>Booking</h1>
        <div class="tab-wrapper">
            <div class="tabs flex-col">
                <% list.forEach( item => { %>
                <div class="tabs__item"><%= item.title %></div>
                <% }); %>
            </div>
            <div class="tabs__content">
                    <% list.forEach( item => { %>
                    <div class="tabs__content__item">
                        <h3><%= item.title %> from <%= item.author %></h3>
                        <div>number of empty seats is <%= item.upcomingClasses[0].booked.length %> of <%= item.countOfSeats %></div>
                        <div>
                            closest entity date <%=  item.upcomingClasses[0].date %>
                            <!--<input value="choose another" type="button" class="bth">-->
                        </div>
                        <div>
                            <h3>Some desc: </h3>
                            <p><%= item.desc%></p>
                        </div>
                    </div>
                    <% }); %>
                <div class="btn-container">
                    <input value="send" type="button" id="sendOrder" class="bth">
                </div>
            </div>
        </div>
    </main>
</body>
</html>