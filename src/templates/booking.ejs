<% include page-head.ejs %>
<script src="/scripts/order-form.js"></script>
<body>
    <% include nav %>
    <main>
        <h1>Booking</h1>
        <div class="order">
            <ul id="order" class="order_entity">
                <% list.forEach( item => { %>
                <li class="order_entity__item"><%= item.title %></li>
                <% }); %>
            </ul>
            <div class="order__details">
                <ul class="entity-details">
                    <% list.forEach( item => { %>
                    <li class="entity-details__item <%= item.title %>">
                        <h3><%= item.title %> from <%= item.author %></h3>
                        <div>number of empty seats is <%= item.upcomingClasses[0].booked.length %> of <%= item.countOfSeats %></div>
                        <div>
                            closest entity date <%=  item.upcomingClasses[0].date %>
                            <!--<input value="choose another" type="button" class="bth">-->
                        </div>
                        <div>
                            <h3>Some desc: </h3>
                            <p><%= item.desc%></p>
                        </div>
                    </li>
                    <% }); %>
                </ul>
                <div class="btn-container">
                    <input value="send" type="button" id="sendOrder" class="bth">
                </div>
            </div>
        </div>
    </main>
</body>
</html>